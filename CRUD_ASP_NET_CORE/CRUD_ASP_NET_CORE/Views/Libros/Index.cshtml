@model IEnumerable<CRUD_ASP_NET_CORE.Models.Libro>


@{
    ViewData["Title"] = "Lista de libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @*Mensaje de confirmacion de la accion*@

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times; </span>
            </button>

        </div>

    }

    @*creacion del boton para agregar*@
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de libros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Libros">Agregar nuevo libro</a>
        </div>
    </div>

    @*//validacion*@
    <div class="row">
        @if (Model.Count() > 0)
        {
            ////creacion de una tabla para la vista de inicio
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Titulo)</td>
                        <td>@Html.DisplayNameFor(m => m.Descripcion)</td>
                        <td>@Html.DisplayNameFor(m => m.FeachaLanzamiento)</td>
                        <td>@Html.DisplayNameFor(m => m.Autor)</td>
                        <td>@Html.DisplayNameFor(m => m.Precio)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Titulo</td>
                            <td>@item.Descripcion</td>
                            <td>@item.FeachaLanzamiento</td>
                            <td>@item.Autor</td>
                            <td>@item.Precio</td>

                            <td><a asp-controller="Libros" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a></td>
                            <td><a asp-controller="Libros" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No existen registros</p>
        }

    </div>

</div>


